<article>
  <header>
    <h1><%= "List of all Events in " + Time.now.year.to_s()%></h1>
  </header>
  <section class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Date</th>
        <th>Location</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= event.name %></td>
          <td><%= event.date %></td>
          <td><%= event.location %></td>
          <td><%= event.description %></td>
          <td><%= link_to 'Show', event %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </section>
</article>
