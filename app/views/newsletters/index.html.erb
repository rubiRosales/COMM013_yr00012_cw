<article>
  <header>
    <h1>Newsletters</h1>
  </header>
  <section class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Date</th>
      </tr>
    </thead>

    <tbody>
      <% @newsletters.each do |newsletter| %>
        <tr>
          <td><a href='<%= newsletter.newsletter%>'><%= newsletter.name %></a></td>
          <td><%= newsletter.date %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </section>